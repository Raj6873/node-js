<%- include('Header') %>

    <div class="page-wrapper">
        <!-- Breadcrumb -->
        <div class="page-breadcrumb bg-light py-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h4 class="page-title text-dark mb-0">Admin Records</h4>
                    </div>
                    <div class="col-md-6 text-md-right mt-2 mt-md-0">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item"><a href="#" class="text-dark">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Library</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="container-fluid mt-4">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0 text-primary">Admin Records Table</h5>
                        <button class="btn btn-outline-primary btn-sm" onclick="window.location.href='/addAdmin'">
                            <i class="fa fa-plus"></i> Add New Admin
                        </button>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table class="table table-hover align-middle table-bordered">
                            <thead class="thead-light text-center">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Gender</th>
                                    <th>Hobby</th>
                                    <th>City</th>
                                    <th>Image</th>
                                    <th>Message</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% AllAdminRecords.forEach((v, i)=> { %>
                                    <tr>
                                        <td>
                                            <%= v.name %>
                                        </td>
                                        <td>
                                            <%= v.email %>
                                        </td>    
                                        <td>
                                            <%= v.gender %>
                                        </td>
                                        <td>
                                            <%= v.hobby %>
                                        </td>
                                        <td>
                                            <%= v.city %>
                                        </td>
                                        <td>
                                            <%= v.Message %>
                                        </td>

                                        <td class="text-center">
                                            <img src="../<%= v.image %>" alt="Admin Image" class="img-thumbnail"
                                                style="max-width: 80px; height: auto;">
                                        </td>
                                        <td class="text-center">
                                            <a href="/updateAdmin/<%= v.id %>" class="btn btn-sm btn-outline-warning"
                                                title="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="/deleteAdmin/?<%= v.id %>" class="btn btn-sm btn-outline-danger"
                                                title="Delete"
                                                onclick="return confirm('Are you sure you want to delete this record?');">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('Footer') %>