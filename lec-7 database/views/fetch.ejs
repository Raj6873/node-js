<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Data</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>

    <div class="container my-4 col-5">
        <h1 align="center">Student Data</h1>

        <div class="table-container">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr align="center">
                        <th>Name</th>
                        <th>Age</th>
                        <th>Email</th>
                        <th>image</th>
                        <th>course</th>
                        <th colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% recoder.map((e,i)=> { %>
                        <tr>
                            <td>
                                <%= e.name %>
                            </td>
                            <td>
                                <%= e.age %>
                            </td>
                            <td>
                                <%= e.email %>
                            </td>
                            <!-- <td><img src="<% e.imgae %>"></td> -->
                            <td>
                                <%= e.course %>
                            </td>
                            <td><a href="/edit/?id=<%= e.id %>" class="btn btn-primary">edit</a></td>
                            <td><a href="/delet/?id=<%= e.id %>" class="btn btn-danger">Delete</a></td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <br>
        <a href="/">Add Students</a>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>