<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit Gaming Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background: linear-gradient(135deg, #667eea, #764ba2);
    }
    .container-box {
      display: flex;
      width: 900px;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
      background: white;
    }
    .right-panel {
      padding: 40px;
      flex: 1;
    }
    .btn-custom {
      width: 100%;
      background: #764ba2;
      border: none;
      color: #fff;
    }
    .btn-custom:hover {
      background: #5a3a85;
    }
    .form-control:focus, .form-select:focus {
      border-color: #764ba2 !important;
      box-shadow: 0 0 0 0.2rem rgba(118, 75, 162, 0.25) !important;
    }
    img {
      margin-top: 10px;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <div class="container-box">
    <div class="right-panel">
      <h3 class="mb-4 text-center">Edit Gaming Details</h3>
      <form method="POST" action="/edit/<%= record.id %>" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label">Game Name</label>
          <input type="text" class="form-control" name="game_name" placeholder="Enter Game Name" value="<%= record.game_name %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Game Date</label>
          <input type="date" class="form-control" name="game_date" placeholder="Enter Game Date" value="<%= record.game_date %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Game Genre</label>
          <select class="form-select" name="game_gener">
            <option value="">Select Genre</option>
            <% const genres = ["Action", "Adventure", "RPG", "Strategy", "Sports"]; %>
            <% genres.forEach((genre) => { %>
              <option value="<%= genre %>" <%= record.game_gener === genre ? 'selected' : '' %>><%= genre %></option>
            <% }); %>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">Game Cover</label>
          <input type="file" class="form-control" name="game_image">
          <% if (record.game_cover) { %>
            <img src="../<%= record.game_cover %>" width="80" alt="Game Cover">
          <% } %>
        </div>
        <button type="submit" class="btn btn-custom">Update</button>
      </form>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
